<style type="text/css" media="screen">
  label {
    font-size: 16px;
  }  
</style>
<%= form_for(@invoice, :html => {:class => "form-stacked"}) do |f| %>
  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!--
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  -->
  <div style="width: 500px; margin: 10px auto">
    <h1 style="text-align:center">Create a payment link here</h1>
    <div class="clearfix inline-inputs">
      <%= f.label :amount, :style => "display:inline" %>

      <div style="float:right">
        <div class="input">
          <span>$</span>
          <%= f.number_field :amount, :class => "small", :step => "any" %>
        </div>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :description, :style => "margin-bottom:10px"%>
      <div class="input">
        <%= f.text_area :description, :class => "span8", :style => "height: 100px;width: 100%"%>
      </div>
    </div>
    <div style="text-align:center"><%= f.submit "Generate link", :class => "btn primary large" %></div>
  </div>
<% end %>
