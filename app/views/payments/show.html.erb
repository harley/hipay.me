<h3>
  Thank you! Your credit card ending <span class="last4"><%= @payment.last4 %></span> has been charged <%= span_for_currency @payment.invoice.amount %>
</h3>

<%= form_for @payment, :html => {:class => "form-stacked"} do |f| %>
  <div class="clearfix">
    <%= f.label :email, "Enter your email below to get a copy of the receipt" %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>
  <%= f.submit 'Submit', :class => "btn primary" %>
<% end %>

<%= render @payment.invoice %>
